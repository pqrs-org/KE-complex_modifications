{
    "title": "Change Command_L Key (Left Command)",
    "rules": [
        {
            "description": "Change Command_R + Command_L to escape only if pressed at the same time.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("left_command", ["right_command"], ["any"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "to_if_alone": <%= to([["left_command"]]) %>
                }
            ]
        }
    ]
}
