{
    "title": "Diamond Cursor",
    "rules": [
        {
            "description": "Change fn + I/J/K/L to Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("i", ["fn"], ["any"]) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ["fn"], ["any"]) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ["fn"], ["any"]) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ["fn"], ["any"]) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+i/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ['right_command'], ["any"]) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['right_command'], ["any"]) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("i", ['right_command'], ["any"]) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['right_command'], ["any"]) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        }
    ]
}
