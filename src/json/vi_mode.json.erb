                    "conditions": [ <%= frontmost_application_unless("vi") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("e", ["control", "fn"], ["caps_lock"]) %>,
                    "to": <%= to([["s"], ["e"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("vi") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("g", ["control", "fn"], ["caps_lock"]) %>,
                    "to": <%= to([["s"], ["g"]]) %>,
