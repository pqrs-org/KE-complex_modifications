{
  "title": "For Japanese （JIS配列をASCII配列風にする設定）",
  "rules": [
    {
      "description": "英数・かなキーを他のキーと組み合わせて押したときに、コマンドキーを送信する。",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("japanese_eisuu", [], ["any"]) %>,
          "to": <%= to([["left_command"]]) %>,
          "to_if_alone": <%= to([["japanese_eisuu"]]) %>
        },
        {
          "type": "basic",
          "from": <%= from("japanese_kana", [], ["any"]) %>,
          "to": <%= to([["right_command"]]) %>,
          "to_if_alone": <%= to([["japanese_kana"]]) %>
        },
        {
          "type": "basic",
          "from": <%= from("right_command", [], ["any"]) %>,
          "to": <%= to([["right_command"]]) %>,
          "to_if_alone": <%= to([["japanese_kana"]]) %>
        }
      ]
    },
    {
      "description": "コマンドキーをオプションキーに置き換える。",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("left_command", [], ["any"]) %>,
          "to": <%= to([["left_option"]]) %>
        }
      ]
    },
    {
      "description": "バッククオートとチルダを割り当てる。",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("international3", [], ["any"]) %>,
          "to": <%= to([["grave_accent_and_tilde"]]) %>
        }
      ]
    }
  ]
}

