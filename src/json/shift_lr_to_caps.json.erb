{
    "title": "Shift Left + Shift Right to toggle caps lock",
    "rules": [
        {
            "description": "Toggle caps lock by pressing Shift left and right at the same time",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("left_shift", ["right_shift"], ["any"]) %>,
                    "to": <%= to([["caps_lock"]]) %>,
                    "to_if_alone": <%= to([["left_shift"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("right_shift", ["left_shift"], ["any"]) %>,
                    "to": <%= to([["caps_lock"]]) %>,
                    "to_if_alone": <%= to([["right_shift"]]) %>
                }
            ]
        }
    ]
}
