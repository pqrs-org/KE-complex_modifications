{
    "title": "Vi Style Arrows Pushing Simultaneously",
    "rules": [
        {
            "description": "Change Control + h/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("h", ['control'], ['caps_lock', 'shift', 'command', 'control', 'fn']) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ['control'], ['caps_lock', 'shift', 'command', 'control', 'fn']) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['control'], ['caps_lock', 'shift', 'command', 'control', 'fn']) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['control'], ['caps_lock', 'shift', 'command', 'control', 'fn']) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },

