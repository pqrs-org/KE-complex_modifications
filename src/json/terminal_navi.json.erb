{
    "title": "Navigation in Terminal Apps",
    "maintainers": ["marlonrichert"],
    "rules": [
        {
            "description": "⌘ + ← | Move cursor to line begin",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "a",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌘ + → | Move cursor to line end",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "e",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌥ + ← | Move cursor one word behind",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        },
                        {
                            "key_code": "b"
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌥ + → | Move cursor one word ahead",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        },
                        {
                            "key_code": "f"
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌥ + ⌫ | Delete one word",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "w",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌥ + fn + ⌫ | Delete one word ahead [laptop w/out ⌦ key]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "option",
                                "fn"
                            ]

                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        },
                        {
                            "key_code": "d"
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌥ + ⌦ | Delete one word ahead [keyboard w/ ⌦ key]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_forward",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]

                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        },
                        {
                            "key_code": "d"
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌘ + ⌫ | Delete to line begin",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "u",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌘ + fn + ⌫ | Delete to line end [laptop w/out ⌦ key]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "command",
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "k",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        },
        {
            "description": "⌘ + ⌦ | Delete to line end [keyboard w/ ⌦ key]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_forward",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "k",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [ <%= frontmost_application_if("terminal") %> ]
                }
            ]
        }
    ]
}
