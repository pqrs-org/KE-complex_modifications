{
  "title": "Personal rules (@JavierMonton)",
  "maintainers": [
    "JavierMonton"
  ],
  "rules": [
    {
      "description": "ScrollLock button → Lunch iTerm",
      "manipulators": [{
        "from": {
          "key_code": "scroll_lock"
        },
        "to": [{
          "shell_command": "open -a 'iTerm.app'"
        }],
        "type": "basic"
      }]
    },
    {
      "description": "Pause button → On/Off GMeet microphone (using Meet Mute)",
      "manipulators": [
        {
          "from": {
            "key_code": "pause",
            "modifiers": {
              "mandatory": []
            }
          },
          "to": {
            "key_code": "z",
            "modifiers": [
              "right_option"
            ]
          },
          "type": "basic"
        }
      ]
    },
    {
      "description": "~ (home symbol) in Alt Gr 4",
      "manipulators": [
        {
          "from": {
            "key_code": "4",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": {
            "key_code": "semicolon",
            "modifiers": [
              "right_option"
            ]
          },
          "type": "basic"
        }
      ]
    }
  ]
}
