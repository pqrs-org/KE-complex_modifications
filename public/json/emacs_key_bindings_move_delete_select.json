{
    "title": "Emacs key bindings (Move, Delete, Select)",
    "rules": [
        {
            "description": "Delete the previous word [option + h] (M-h -> option + backspace)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["option"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Delete the next word [option + d] (M-d -> option + delete)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "mandatory": ["option"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_forward",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Move to the previous word [option + f] (M-f -> option + right_arrow)",
            "manipulators": [
            {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Move to the next word [option + b] (M-b -> option + left_arrow)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Select the previous word [option + shift + f] (M-f + shift -> option + shift + right_arrow)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "option",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "option",
                                "shift"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Select the next word [option + shift + b] (M-b + shift -> option + shift + left_arrow)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "option",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "option",
                                "shift"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Select the current word [option + w]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "option",
                                "shift"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
