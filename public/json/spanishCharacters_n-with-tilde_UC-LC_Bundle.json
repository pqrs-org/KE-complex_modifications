{
    "title": "Spanish characters: [Ñ] (Uppercase and Lowercase ñ shortcut bundle)",
    "maintainers": ["ticodb"],
    "rules": [
        {
            "description": "Add uppercase n with sign (Ñ) using Control + Shift + N",
            "manipulators": [
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": { "mandatory": ["control", "shift"] }
                    },
                    "to": [
                        {
                            "key_code": "n",
                            "modifiers": ["option"]
                        },
                        {
                            "key_code": "n",
                            "modifiers": ["shift"]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Add lowercase n with sign (ñ)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": { "mandatory": ["control"] }
                    },
                    "to": [
                        {
                            "key_code": "n",
                            "modifiers": ["option"]
                        },
                        { "key_code": "n" }
                    ],
                    "type": "basic"
                }
            ]
        }			
    ]
}
