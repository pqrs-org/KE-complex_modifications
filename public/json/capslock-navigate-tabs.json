{
  "title": "[macOS] Use Caps Lock + Arrows to Navigate Tabs",
  "rules": [
    {
      "description": "Navigate Tabs with CapsLock + Any Arrows",
      "manipulators": [
        {
            "type": "basic",
            "from": {
              "modifiers": {
                "optional": [
                  "any"
                ]
              },
              "key_code": "left_arrow"
            },
            "to": [
              {
                "key_code": "left_arrow",
                "modifiers": [
                  "left_gui",
                  "left_alt"
                ]
              }
            ],
            "conditions": [
                {
                  "type": "variable_if",
                  "name": "caps_lock pressed",
                  "value": 1
                }
            ]
        },
        {
            "type": "basic",
            "from": {
              "modifiers": {
                "optional": [
                  "any"
                ]
              },
              "key_code": "right_arrow"
            },
            "to": [
              {
                "key_code": "right_arrow",
                "modifiers": [
                  "left_gui",
                  "left_alt"
                ]
              }
            ],
            "conditions": [
                {
                  "type": "variable_if",
                  "name": "caps_lock pressed",
                  "value": 1
                }
            ]
        },
        {
            "type": "basic",
            "from": {
              "modifiers": {
                "optional": [
                  "any"
                ]
              },
              "key_code": "up_arrow"
            },
            "to": [
              {
                "key_code": "up_arrow",
                "modifiers": [
                  "left_gui",
                  "left_alt"
                ]
              }
            ],
            "conditions": [
                {
                  "type": "variable_if",
                  "name": "caps_lock pressed",
                  "value": 1
                }
            ]
        },
        {
            "type": "basic",
            "from": {
              "modifiers": {
                "optional": [
                  "any"
                ]
              },
              "key_code": "down_arrow"
            },
            "to": [
              {
                "key_code": "down_arrow",
                "modifiers": [
                  "left_gui",
                  "left_alt"
                ]
              }
            ],
            "conditions": [
                {
                  "type": "variable_if",
                  "name": "caps_lock pressed",
                  "value": 1
                }
            ]
        },
        {
            "type": "basic",
            "from": {
                "key_code": "caps_lock",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "set_variable": {
                        "name": "caps_lock pressed",
                        "value": 1
                    }
                }
            ],
            "to_after_key_up": [
                {
                    "set_variable": {
                        "name": "caps_lock pressed",
                        "value": 0
                    }
                }
            ]
        }
      ]
    }
  ]
}