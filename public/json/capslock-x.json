            {
              "key_code": "left_arrow",
              "modifiers": ["left_shift", "left_option"]
            },
            {
              "key_code": "delete_or_backspace"
            }
          ]
        },
        {
          "description": "Delete the word to the right of the insertion point",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
