{
  "title": "Cmd to Option (Steam & Jagex)",
  "maintainers": ["zghanem0"],
  "rules": [
    {
      "description": "RuneScape app-specific (not system-wide): Cmd to Option (Steam & Jagex)",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com\\.jagex\\.RuneScape",
                "com\\.jagex\\.launcher",
                "com\\.valvesoftware\\.steam",
                "com\\.valvesoftware\\.steam\\.helper",
                "org\\.jagex\\.launcher"
              ],
              "file_paths": ["RuneScape", "Jagex Launcher", "Steam"]
            }
          ],
          "from": {
            "key_code": "left_command",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_option" }]
        }
      ]
    }
  ]
}
