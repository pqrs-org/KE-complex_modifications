{
  "title": "Change ⌥(jikl) to ⌥(←↑↓→) keys and ⌥⇧(jikl) to ⌥⇧(←↑↓→) keys",
  "maintainers": ["annietma"],
  "rules": [
    {
      "description": "Change ⌥(jikl) to ⌥(←↑↓→) keys",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change ⌥⇧(jikl) to ⌥⇧(←↑↓→) keys",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option", "left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
