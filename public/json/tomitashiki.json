                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "a"
                    },
                    "to": [
                        {
                            "key_code": "4"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "s"
                    },
                    "to": [
                        {
                            "key_code": "5"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "d"
                    },
                    "to": [
                        {
                            "key_code": "6"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "z"
                    },
                    "to": [
                        {
                            "key_code": "7"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "x"
                    },
                    "to": [
