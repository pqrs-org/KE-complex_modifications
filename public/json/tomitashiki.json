{
    "title": "Tomita-shiki modifications",
    "rules": [
        {
            "description": "Control → Enter, かな → Delete",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "japanese_kana",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ]
                }
            ]
        },
        {
            "description": "英数キーを短く押す → 英数・かなを切り替え, 長押し → Left_command ",
            "manipulators": [
                {
                    "type": "basic",
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ],
                            "type": "input_source_if"
                        }
                    ],
                    "from": {
                        "key_code": "japanese_eisuu",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 100,
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    }
                },
                {
                    "type": "basic",
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "language": "en"
                                }
                            ],
                            "type": "input_source_if"
                        }
                    ],
                    "from": {
                        "key_code": "japanese_eisuu",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to_if_alone": [
                        {
                            "key_code": "japanese_kana"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 100,
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    }
                }
            ]
        },
        {
            "description": "left command + J/I/K/L → 矢印(左/上/下/右)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "j"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "left_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "k"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "down_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "i"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "up_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "l"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "right_arrow"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Control + w-c → 1-9",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": "left_option",
                            "optional": [
                                "any"
                            ]
                        },
                        "key_code": "q"
                    },
                    "to": [
                        {
                            "key_code": "1"
                        }
                    ]
                },
                {
                    "type": "basic",
