{
  "title": "Obsidian.app, emacs like key at vim-insert mode",
  "rules": [
    {
      "description": "ctrl + bfpnae (only for Obsidian.app)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^md\\.obsidian$"
              ]
            }
          ]
        },
        {
          "type": "basic",
