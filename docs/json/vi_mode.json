{
    "title": "Vi Mode: S + H/J/K/L = Arrow Keys; S + F + H/J/K/L = Home / Page Down / Page Up / End",
    "rules": [
        {
            "description": "Change S to Left_control + Fn if pressed with other keys (Post S when pressed alone)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{
                        "key_code": "fn",
                        "modifiers": ["left_control"]
                    }],
                    "to_if_alone": [{"key_code": "s"}]
                }
            ]
        },
        {
            "description": "Change Left_control + Fn + H/J/K/L to Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["left_control", "fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["left_control", "fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "down_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["left_control", "fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "up_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["left_control", "fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "right_arrow"}]
                }
            ]
        },
        {
            "description": "Change Left_control + Fn + F to Fn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": ["left_control", "fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "fn"}]
                }
            ]
        },
        {
            "description": "Change Fn + H/J/K/L to Home / Page Down / Page Up / End",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "home"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "page_down"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "page_up"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "end"}]
                }
            ]
        }
    ]
}
